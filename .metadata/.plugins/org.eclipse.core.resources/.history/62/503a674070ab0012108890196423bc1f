package de.rwth.ti.db;

import android.content.ContentValues;
import android.database.sqlite.SQLiteDatabase;

/** class that represents the table where measure data are stored */
public class Apps {

	private static final String TABLE_NAME = "apps";
	private static final String COLUMN_ID = "_id";
	private static final String COLUMN_BSSID = "bssid";
	private static final String COLUMN_LEVEL = "level";
	private static final String COLUMN_FREQ = "freq";
	private static final String DATABASE_CREATE = "create table " + TABLE_NAME
			+ "(" + COLUMN_ID + " integer primary key autoincrement, "
			+ COLUMN_BSSID + " text not null, " + COLUMN_LEVEL + " integer, "
			+ COLUMN_FREQ + " integer);";

	private SQLiteDatabase db;

	private public static void onCreate(SQLiteDatabase db) {
		db.execSQL(DATABASE_CREATE);
	}

	public static void onUpgrade(SQLiteDatabase db, int oldVersion,
			int newVersion) {
		db.execSQL("DROP TABLE IF EXISTS " + TABLE_NAME);
		onCreate(db);
	}

	public static void createApp(SQLiteDatabase db, String bssid, int level,
			int freq) {
		ContentValues values = new ContentValues();
		values.put(Apps.COLUMN_BSSID, bssid);
		values.put(Apps.COLUMN_LEVEL, level);
		values.put(Apps.COLUMN_FREQ, freq);

	}
}
