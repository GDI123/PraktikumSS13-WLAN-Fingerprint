package de.rwth.ti.db;

public class Checkpoint {

	public static final String TABLE_NAME = "checkpoints";
	public static final String COLUMN_ID = "_id";
	public static final String COLUMN_POS_X = "posx";
	public static final String COLUMN_POS_Y = "posy";
	public static final String COLUMN_MID = "mid";

	public static final String[] ALL_COLUMNS = { COLUMN_ID, COLUMN_POS_X,
			COLUMN_POS_Y, COLUMN_MID };
	public static final String DROP_TABLE = "DROP TABLE IF EXISTS "
			+ TABLE_NAME;
	
	private long id;
	private double posx;
	private double posy;
	private long mid;

}
